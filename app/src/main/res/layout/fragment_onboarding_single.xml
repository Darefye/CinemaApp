<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_screen_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.onboarding.OnboardingMainFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/onboarding_screen_picture"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/wfh_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/onboarding_screen_text"
        style="@style/TitleTextFromOnboarding"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@id/onboarding_screen_picture"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:gravity="top"
        android:text="@string/onboarding_text"
        android:textAppearance="@style/onboarding_text_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_screen_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>